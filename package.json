{
  "name": "@jenssimon/stylelint-config",
  "version": "0.0.0-development",
  "description": "A collection of shareable Stylelint configurations",
  "main": "index.js",
  "author": "Jens Simon <https://github.com/jenssimon>",
  "keywords": [
    "stylelint",
    "stylelintconfig"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/stylelint-config"
  },
  "license": "MIT",
  "files": [
    "/index.js",
    "/base.js",
    "/base-order.js",
    "/order.js",
    "/sfra.js",
    "/lib"
  ],
  "scripts": {
    "lint": "eslint --fix ./",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint ./",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard-scss": "^9.0.0"
  },
  "peerDependencies": {
    "stylelint": ">=14.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@jenssimon/eslint-config-base": "6.7.1",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.43.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "21.0.5",
    "stylelint": "15.9.0"
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base"
    ],
    "rules": {
      "unicorn/prefer-module": "off"
    }
  },
  "packageManager": "yarn@3.6.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
